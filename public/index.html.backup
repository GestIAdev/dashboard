        }

        .generate-btn:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 12px 35px rgba(157, 78, 221, 0.6);
        }

        .generate-btn:hover::before {
            left: 100%;
        }

        .generate-btn:active {
